extends layout

block content
  .container.mt-5
    .row.justify-content-center
      .col-md-8
        h2.text-center.mb-4 Registrierung

        // Erfolgsmeldung anzeigen
        if success && success.length
          p.alert.alert-success.text-center= success[0]

        // Fehlermeldung anzeigen
        if error && error.length
          p.alert.alert-danger.text-center= error[0]

        form(action="/register" method="POST")
          .mb-3
            label.form-label(for="username") Benutzername:
            input.form-control(
              type="text"
              id="username"
              name="username"
              required
              value=(formData && formData.username ? formData.username : '')
            )

          .mb-3
            label.form-label(for="name") Name:
            input.form-control(
              type="text"
              id="name"
              name="name"
              required
              value=(formData && formData.name ? formData.name : '')
            )

          .mb-3
            label.form-label(for="email") Email:
            input.form-control(
              type="email"
              id="email"
              name="email"
              required
              value=(formData && formData.email ? formData.email : '')
            )

          .mb-3
            label.form-label(for="password") Passwort:
            input.form-control(type="password" id="password" name="password" required)

          .mb-3
            label.form-label(for="confirm") Passwort best√§tigen:
            input.form-control(type="password" id="confirm" name="confirm" required)

          button.btn.btn-primary.w-100(type="submit") Registrieren
